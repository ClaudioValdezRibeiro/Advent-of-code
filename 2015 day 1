# Part one

print(inp.count('(') - inp.count(')'))  # I count the number of '(' and subtract it by the number of ')'

# Part two

floor = 0
for i in range(len(inp)):
	if inp[i] == '(':
  	floor += 1
	else:
		floor -= 1

	if floor == -1:
		print(i + 1)
		break
